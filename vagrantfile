Vagrant.configure("2") do |config|
    config.vm.define "hkovacS" do |hkovacS|
        hkovacS.vm.box = "debian/buster64"
        hkovacS.vm.network "private_network", ip: "192.168.56.110" # virtualbox renames network interface so it is not eth1 but enp0s8
        hkovacS.vm.provider "virtualbox" do |vb|
            vb.memory = "1024"
            vb.cpus = 1
        end
        hkovacS.vm.hostname = "hkovacS"
        hkovacS.vm.synced_folder "./k3s_token", "/home/vagrant"
        hkovacS.vm.provision "shell", inline: <<-SHELL
            curl -sfL https://get.k3s.io | sh -
            sudo cp /var/lib/rancher/k3s/server/node-token /home/vagrant/node-token
            sudo chmod 644 /home/vagrant/node-token
        SHELL
    end
    config.vm.define "hkovacSW" do |hkovacSW|
        hkovacSW.vm.box = "debian/buster64"
        hkovacSW.vm.network "private_network", ip: "192.168.56.111" # virtualbox renames network interface so it is not eth1 but enp0s8
        hkovacSW.vm.provider "virtualbox" do |vb|
            vb.memory = "1024"
            vb.cpus = 1
        end
        hkovacSW.vm.hostname = "hkovacSW"
        hkovacSW.vm.synced_folder "./k3s_token", "/home/vagrant"
        hkovacSW.vm.provision "shell", inline: <<-SHELL
            curl -sfL https://get.k3s.io | K3S_URL=https://192.168.56.110:6443 K3S_TOKEN=`cat /home/vagrant/node-token` sh -
        SHELL
    end
end
